<UserControl
    x:Class="Viewer.Universal.Controls.SeriesInfoControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Viewer.Universal.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="uc"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <StackPanel Orientation="Vertical" Padding="5,0,0,0" BorderBrush="Black" BorderThickness="1"  Background="#999999" Margin="15,2,0,0">
        <TextBlock>
            <Run Text="{Binding Serie.Modality, ElementName=uc}" />
            <Run Text=": " />
            <Run Text="{Binding Serie.SeriesDescription, ElementName=uc}" />
        </TextBlock>
        <TextBlock FontWeight="Light">
            <Run Text="{Binding Serie.ImagesCount, ElementName=uc}" />
            <Run Text=" Bilder" />
        </TextBlock>
    </StackPanel>
</UserControl>
