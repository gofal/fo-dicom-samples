<UserControl
    x:Class="Viewer.Universal.Controls.StudyInfoControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Viewer.Universal.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
     x:Name="uc"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">
    
    <StackPanel Orientation="Horizontal" Background="#CCCCCC" Margin="2" BorderThickness="1">
        <TextBlock Text="{Binding Study.StudyDateString, ElementName=uc}" />
        <TextBlock Text="{Binding Study.StudyDescription, ElementName=uc}" Padding="5,0,0,0" />
    </StackPanel>

</UserControl>
